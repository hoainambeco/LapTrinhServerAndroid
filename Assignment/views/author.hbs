        </div>
    </nav>
    <div class="row" style="display: contents;">
        <table class="table table-dark table-borderless p-0">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tên tác giả</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col">Email</th>
                <th scope="col">Ngày sinh</th>
                <th scope="col">Địa chỉ</th>
            </tr>
            </thead>
            <tbody>
            {{#each author}}
                <tr>
                    <td>{{this.ID}}</td>
                    <td>{{this.Name}}</td>
                    <td>{{this.PhoneNumber}}</td>
                    <td>{{this.Email}}</td>
                    <td>{{this.Birthday}}</td>
                    <td>{{this.Address}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <!-- Button trigger modal -->
        <div class="row" style="margin: auto;">
            <button
                    type="button"
                    class="btn btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#exampleModal"
            >
                Thêm truyện
            </button>
            <button
                    type="button"
                    class="btn btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#UpdateModal"
            >
                Sửa
            </button>
            <button
                    type="button"
                    class="btn btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#DeleteModal"
            >
                Xóa
            </button>
        </div>
        <!-- Modal add-->
        <div
                class="modal fade"
                id="exampleModal"
                tabindex="-1"
                aria-labelledby="exampleModalLabel"
                aria-hidden="true"
        >
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Thêm</h5>
                        <button
                                type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"
                        ></button>
                    </div>
                    <div class="modal-body">
                        <div class="col-auto">
                            <div class="mb-4 row">
                                <label for="InputID" class="col-sm-3 col-form-label">ID:</label>
                                <div class="col-sm-9">
                                    <input
                                            type="text"
                                            class="form-control text-dark"
                                            id="InputID"
                                            placeholder="ID"
                                    />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="InputFullName" class="col-sm-3 col-form-label">Tên
                                    tác giả:</label>
                                <div class="col-sm-9">
                                    <input
                                            type="text"
                                            class="form-control text-dark"
                                            id="InputFullName"
                                            placeholder="FullName"
                                    />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="InputUserName" class="col-sm-3 col-form-label">Số điện thoại:</label>
                                <div class="col-sm-9">
                                    <input
                                            type="text"
                                            class="form-control text-dark"
                                            id="PhoneNumber"
                                            placeholder="Phone Number"
                                    />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="staticEmail" class="col-sm-3 col-form-label">Emai:</label>
                                <div class="col-sm-9">
                                    <input
                                            type="text"
                                            class="form-control text-dark"
                                            id="staticEmail"
                                            placeholder="email@example.com"
                                    />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="staticPassword" class="col-sm-3 col-form-label">Ngày sinh:</label>
                                <div class="col-sm-9">
                                    <input
                                            type="date"
                                            class="form-control text-dark"
                                            id="Brithday"
                                            placeholder="Brithday"
                                    />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label
                                        for="staticCPassword"
                                        class="col-sm-3 col-form-label"
                                >Địa chỉ:</label>
                                <div class="col-sm-9">
                                    <input
                                            type="text"
                                            class="form-control text-dark"
                                            id="Address"
                                            placeholder="Address"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button
                                type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal"
                        >Close
                        </button>
                        <button
                                type="button"
                                class="btn btn-primary"
                                data-bs-dismiss="modal"
                                onclick="{alert('thêm thành công')}"
                        >Save changes
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal update-->
        <div
                class="modal fade"
                id="UpdateModal"
                tabindex="-1"
                aria-labelledby="exampleModalLabel"
                aria-hidden="true"
        >
            <script>
                function setData(value) {
                    document.getElementById('UpInputID').value =
                            value;
                }
            </script>
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Sửa truyện</h5>
                        <button
                                type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"
                        ></button>
                    </div>
                    <div class="modal-body">
                        <div class="col-auto">
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label">Truyện:</label>
                                <div class="col-sm-9">
                                    <label>
                                        <select name="cate_id" onchange="{setData(this.value)}">
                                            {{#each user}}
                                                <option value="{{this.ID}}">{{this.UserName}}</option>
                                            {{/each}}
                                        </select>
                                    </label>
                                </div>
                            </div>
                            <div class="mb-4 row">
                                <label for="InputID" class="col-sm-3 col-form-label">ID:</label>
                                <div class="col-sm-9">
                                    <input
                                            type="text"
                                            class="form-control text-dark"
                                            id="InputID"
                                            placeholder="ID"
                                    />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="InputFullName" class="col-sm-3 col-form-label">Tên
                                    Truyện:</label>
                                <div class="col-sm-9">
                                    <input
                                            type="text"
                                            class="form-control text-dark"
                                            id="InputFullName"
                                            placeholder="FullName"
                                    />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="InputUserName" class="col-sm-3 col-form-label">Thể
                                    loại:</label>
                                <div class="col-sm-9">
                                    <input
                                            type="text"
                                            class="form-control text-dark"
                                            id="InputUserName"
                                            placeholder="UserName"
                                    />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="staticEmail" class="col-sm-3 col-form-label">Tác
                                    giả:</label>
                                <div class="col-sm-9">
                                    <input
                                            type="text"
                                            class="form-control text-dark"
                                            id="staticEmail"
                                            placeholder="email@example.com"
                                    />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="staticPassword" class="col-sm-3 col-form-label">Nhà
                                    xuất bản</label>
                                <div class="col-sm-9">
                                    <input
                                            type="password"
                                            class="form-control text-dark"
                                            id="staticPassword"
                                            placeholder="password"
                                    />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label
                                        for="staticCPassword"
                                        class="col-sm-3 col-form-label"
                                >Ngày cập nhật</label>
                                <div class="col-sm-9">
                                    <input
                                            type="password"
                                            class="form-control text-dark"
                                            id="staticCPassword"
                                            placeholder="Confirm password"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button
                                type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal"
                        >Close
                        </button>
                        <button
                                type="button"
                                class="btn btn-primary"
                                data-bs-dismiss="modal"
                                onclick="{alert('sửa thành công')}"
                        >Save changes
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal Delete-->
        <div
                class="modal fade"
                id="DeleteModal"
                tabindex="-1"
                aria-labelledby="exampleModalLabel"
                aria-hidden="true"
        >
            <script>
                function setData(value) {
                    document.getElementById('UpInputID').value =
                            value;
                }
            </script>
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Xóa truyện</h5>
                        <button
                                type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"
                        ></button>
                    </div>
                    <div class="modal-body">
                        <div class="col-auto">
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label">Truyện:</label>
                                <div class="col-sm-9">
                                    <label>
                                        <select name="cate_id" onchange="{setData(this.value)}">
                                            {{#each user}}
                                                <option value="{{this.ID}}">{{this.UserName}}</option>
                                            {{/each}}
                                        </select>
                                    </label>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button
                                        type="button"
                                        class="btn btn-secondary"
                                        data-bs-dismiss="modal"
                                >Close
                                </button>
                                <button
                                        type="button"
                                        class="btn btn-primary"
                                        data-bs-dismiss="modal"
                                        onclick="{alert('xóa thành công')}"
                                >Save changes
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
