                            <div class="mb-3 row">
                                <label class="col-sm-3 col-form-label">Tài Khoản:</label>
                                <div class="col-sm-9">
                                    <select name="cate_id" onchange="{setData(this.value)}">
                                        {{#each user}}
                                            <option value="{{this.ID}}">{{this.UserName}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="InputID" class="col-sm-2 col-form-label">ID:</label>
                                <div class="col-sm-10">
                                    <input
                                            type="text"
                                            class="form-control text-dark"
                                            id="UpInputID"
                                            placeholder="ID"
                                    />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label
                                        for="InputFullName"
                                        class="col-sm-2 col-form-label"
                                >FullName:</label>
                                <div class="col-sm-10">
                                    <input
                                            type="text"
                                            class="form-control text-dark"
                                            id="InputFullName"
                                            placeholder="FullName"
                                    />
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label
                                        for="InputUserName"
                                        class="col-sm-2 col-form-label"
